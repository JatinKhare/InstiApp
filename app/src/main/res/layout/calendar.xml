<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:id="@+id/acad_calendar_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadFromWeb"
        android:text="Academic Calendar" />

    <Button
        android:id="@+id/acad_calendar_autumn_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadFromWeb"
        android:text="Monthly Autumn" />
        <Button
            android:id="@+id/acad_calendar_spring_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="Monthly Spring" />
    </LinearLayout>
</RelativeLayout>