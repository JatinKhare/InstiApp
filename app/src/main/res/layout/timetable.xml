<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/timetable_freshers_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="Freshers" />

        <Button
            android:id="@+id/timetable_sbs_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="SBS" />

        <Button
            android:id="@+id/timetable_seocs_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="SEOCS" />

        <Button
            android:id="@+id/timetable_ses_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="SES" />

        <Button
            android:id="@+id/timetable_sif_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="SIF" />

        <Button
            android:id="@+id/timetable_smmme_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="SMMME" />

        <Button
            android:id="@+id/timetable_sms_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="downloadFromWeb"
            android:text="SMS" />

    </LinearLayout>

</RelativeLayout>